@{
    ViewData["Title"] = "Movie Form";
}
@model Mission6.Models.FormResponse

<h1>Movie Input Form</h1>

<div>
    <form method="post">
        <!--Add validation messages-->
        <div asp-validation-summary="All"></div>

        <!--Create a dropdown method to choose the category-->
        <label asp-for="Category">Category: </label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            <!--Create a for loop to add options based on our Categories list-->
            @foreach (Category x in ViewBag.Categories)
            {
                <option value="@x.CategoryId">@x.CategoryName</option>
            }
        </select>
        <br/>

        <label asp-for="Title">Title: </label>
        <input asp-for="Title"/>
        <br/>

        <label asp-for="Year">Year: </label>
        <input asp-for="Year"/>
        <br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director"/>
        <br/>

        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating"> 
            <option value="G"> G </option>
            <option value="PG"> PG </option>
            <option value="PG-13"> PG-13 </option>
            <option value="R"> R </option>
        </select>
        <br/>

        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited"> 
            <option value="True"> Yes </option>
            <option value="False"> No </option>
        </select>
        <br/>

        <label asp-for="Lent_To">Lent To: </label>
        <input asp-for="Lent_To" />
        <br/>

        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" maxlength="25"/>
        <br/>

        <button type="submit"> Add Movie </button>
    </form>
</div>